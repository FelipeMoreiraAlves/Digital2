package br.com.fiap.spring.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
@RequestMapping("/pessoa") // Referencia a URL 
public class PessoaController {

	@GetMapping("cadastrar") // Referencia a URL 
	public String contato() {
		return "pessoa/pessoa"; // Referencia ao caminho da pagina
	}

	// Método que recupera as infgormações do formulário
	@PostMapping("cadastrar") // Referencia a URL
	public String processaContato(String idade, String nome, boolean aposentado) {
		System.out.println(nome + " " + idade + " " + aposentado);
		return "pessoa/pessoa"; // Referencia ao caminho da pagina 
	}

}
